<table class="table table-hover table-striped">
	<tr>
		<th style="width: 25px;">#</th>
		<th>Title</th>
		<th style="width: 25px;">Runtime</th>
		<th style="width: 150px;"></th>
	</tr>
	{{#each items}}
	<tr>
		<td>{{@index}}</td>
		{{#if this.episode}}
		<td>{{this.showtitle}} - {{this.title}} (Season {{this.seasonid}}, Episode {{this.episode}})</td>
		{{else}}
		<td>{{this.title}}</td>
		{{/if}}
		<td>{{inHoursMinutesSeconds this.runtime}}</td>
		<td>
			<button type="button" class="btn btn-default btn-sm">
				<span class="glyphicon glyphicon-play"></span>
			</button>
			<button type="button" class="btn btn-default btn-sm add-to-playlist" data-idtype="{{this.episodeid}}" data-id="{{this.episodeid}}">
				<span class="glyphicon glyphicon-list"></span>
			</button>
			<button type="button" class="btn btn-default btn-sm">
				<span class="glyphicon glyphicon-info-sign"></span>
			</button>
		</td>
	</tr>
	{{/each}}
</table>